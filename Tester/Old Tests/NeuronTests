using Microsoft.VisualStudio.TestTools.UnitTesting;
using NumRecog;

namespace TesterOld
{
    [TestClass]
    public class NeuronTests
    {
        //ImageSet testSet = new ImageSet("C:/Users/Will/Documents/Computer Science Year 1/MyProjects/C# ML/Hand written images/mnist_784.csv");

        
        [TestMethod]
        public void Test_GetWeight()
        {
            Neuron n = new Neuron(0.0);
            Assert.AreEqual(0.0, n.getWeight());
        }

        [TestMethod]
        public void Test_Update()
        {
            Neuron n = new Neuron(0.0);
            n.update(0.5);
            Assert.AreEqual(0.0+0.5, n.getWeight());
        }
    }
}